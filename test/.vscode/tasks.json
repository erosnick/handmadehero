{
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "-DUNICODE",
                "-D_UNICODE",
                "user32.lib",
                "/Zi",
                "/Gm",
                "/W3",
                "/GS",
                "/WX-",
                "/nologo",
                "/INCREMENTAL",
                "/EHsc",
                "/Fe:",
